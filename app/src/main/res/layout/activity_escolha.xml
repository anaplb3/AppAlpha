<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    tools:context="com.example.anaplb.appAlpha.escolhaActivity">

    <Button
        android:id="@+id/associar"
        android:layout_width="215dp"
        android:layout_height="55dp"
        android:layout_marginBottom="63dp"
        android:layout_marginTop="212dp"
        android:onClick="associarLetra"
        android:text="Associar Letra"
        app:layout_constraintBottom_toTopOf="@+id/completar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/completar"
        android:layout_width="215dp"
        android:layout_height="55dp"
        android:layout_marginBottom="188dp"
        android:onClick="completarLetra"
        android:text="Completar Palavra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/associar" />
</android.support.constraint.ConstraintLayout>
